<h1>Sign up</h1>

<hr />

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="row">
    <div class="col-sm-6 col-xs-12">
      <div class="form-group">
        <%= f.label :email %>
        <%= f.email_field :email, autofocus: true, class: "form-control", placeholder: "owen.astrachan@duke.edu" %>
        <small class="form-text text-muted">(Must be Duke email)</small>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-sm-6 col-xs-12">
      <div class="form-group">
        <%= f.label :password %>
        <%= f.password_field :password, autofocus: true, autocomplete: "off", class: "form-control" %>
        <% if @minimum_password_length %>
          <small class="form-text text-muted">
            (<%= @minimum_password_length %> characters minimum)
          </small>
        <% end %>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-sm-6 col-xs-12">
      <div class="form-group">
        <%= f.label :password_confirmation %>
        <%= f.password_field :password_confirmation, autofocus: true, autocomplete: "off", class: "form-control" %>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-sm-6 col-xs-12"><hr/></div>
  </div>


  <div class="row">
    <div class="col-sm-3 col-xs-12">
        <%= f.submit "Sign up", class: "btn btn-primary btn-lg btn-block" %>
    </div>
  </div>

<% end %>

<%= render "devise/shared/links" %>
