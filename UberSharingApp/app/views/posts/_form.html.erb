<%= form_with(model: post, local: true) do |form| %>
  <% if post.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(post.errors.count, "error") %> prohibited this post from being saved:</h2>

      <ul>
      <% post.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="row">
    <div class="col-sm-10 col-sm-offset-1 col-xs-12">
       <div class="form-group">
        <%= form.label :destination %>
        <%= form.text_field :destination, id: :post_destination, autofocus: true, class: "form-control" %>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-sm-10 col-sm-offset-1 col-xs-12">
      <div class="form-group">
        <%= form.label :departure_location %>
        <%= form.text_field :departure_location, id: :post_departure_location, autofocus: true, class: "form-control" %>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-sm-10 col-sm-offset-1 col-xs-12">
      <div class="form-group">
        <%= form.label :departure_time %>
        <%= form.datetime_local_field :departure_time, id: :post_departure_time, autofocus: true, class: "form-control" %>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-sm-10 col-sm-offset-1 col-xs-12">
      <div class="form-group">
        <%= form.label :number_passengers %>
        <%= form.select :number_passengers, [2,3,4,5,6], id: :post_number_passengers, autofocus: true, class: "form-control" %>
      </div>
    </div>
  </div>

  <%= form.hidden_field :creator, :value => current_user.id %>

  <div class="row">
    <div class="col-sm-10 col-sm-offset-1 col-xs-12">
        <%= form.submit "Save Post", class: "btn btn-primary btn-lg btn-block" %>
    </div>
  </div>

<% end %>

<hr /> 
